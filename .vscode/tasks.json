{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "Ninja",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "download",
            "type": "shell",
            "command": "${env:LOCALAPPDATA}\\Programs\\OpenOCD-20240916-0.12.0\\bin\\openocd.exe",
            "args": [
                "-f",
                "${workspaceFolder}/stm32f4x.cfg",
                "-c",
                "program build/f407_audio.elf verify reset exit"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn" :[
                "build"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "Ninja clean",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
    ]
}